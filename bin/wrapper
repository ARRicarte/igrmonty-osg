if test $# -lt 3; then
	cat <<EOF
usage: $0 <process_id> <input> <M_unit> [Tp/Te] [init_bias_scale]
a wrapper to run \`grmonty\` on the Open Science Grid with HTCondor
EOF
	exit 1
fi

set -e

PROCESS="$1"
dump="$2"
M_unit="$3"
TP_OVER_TE="${4:-3.0}" # NOTE that ':-' indicates the default '3.0'
bias="${5:-0.5}"       # NOTE that ':-' indicates the default '0.5'

PARFILE="process_$PROCESS.par"

cat <<EOF | tee "$PARFILE"
# Automatically generated \`grmonty\` parameter file

fit_bias    1
fit_bias_ns 10000
bias        ${bias}
ratio       1.414

Ns          10000
MBH         4.3e+6
M_unit      ${M_unit}

TP_OVER_TE  ${TP_OVER_TE}
dump        ${dump}
spectrum    spectrum.h5
EOF

./grmonty -par "$PARFILE"
